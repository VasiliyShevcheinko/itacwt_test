#!/bin/bash

# shellcheck source=./base_command
source "$(dirname "${BASH_SOURCE[0]}")/base_command"

copy_backend_env_local_file() {
    local envPath="$DIR/src/backend/.env"
    local envLocalPath="$DIR/src/backend/$1"
    local ARG_ENV=$2

    if [ -f "$envLocalPath" ]; then
        echo "${envLocalPath}"
        exit
    else
        if [ -f "$envPath.$ARG_ENV" ]; then
            cp "$envPath.$ARG_ENV" "$envLocalPath"
        else
            if [ -f "$envPath.local" ]; then
                envLocalPath="$envPath.local"
            else
                envLocalPath="$envPath.local"
                cp "$envPath" "$envLocalPath"
            fi
        fi
    fi

    echo "${envLocalPath}"
}
