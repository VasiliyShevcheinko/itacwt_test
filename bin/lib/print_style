#!/bin/bash

# prints colored text
print_style () {
    if [ "$2" == "info" ] ; then
        local COLOR="96m"
    elif [ "$2" == "success" ] ; then
        local COLOR="92m"
    elif [ "$2" == "warning" ] ; then
        local COLOR="93m"
    elif [ "$2" == "danger" ] ; then
        local COLOR="91m"
    else #default color
        local COLOR="0m"
    fi

    local START_COLOR="\e[$COLOR"
    local END_COLOR="\e[0m"

    printf "$START_COLOR%b$END_COLOR" "$1"
}
