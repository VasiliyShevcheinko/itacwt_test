#!/bin/bash

cp_if_exists () {
  local envPath=$2
  local distPath=$1

  if [ -f "$envPath" ]; then
      print_style "Copy canceled, file $envPath exists\n"
  else
    if [ -f "$distPath" ]; then
      print_style "Copied file $2\n"
      cp "$distPath" "$envPath"
    else
      print_style "Copy failed, file $distPath does not exists.\n" "danger"
    fi
  fi
}
