#!/bin/bash

# shellcheck source=./lib/base_command
source "$(dirname "${BASH_SOURCE[0]}")/lib/base_command"

#QA
print_style "Этот скрипт предназначен для первоначальной установки проекта!!!\n" "warning"
read -rp "Напиши \"drop\" чтоб осознанно перетереть БД: " DROP_ANSWER
if [ "$DROP_ANSWER" != "drop" ]; then
  print_style "Операция отменена\n" "success"
  exit 1
fi

make install-symfony
